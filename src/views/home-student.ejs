<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <title>Home</title>

   <link rel="stylesheet" href="/static/styles/uikit.min.css">
   <link rel="stylesheet" href="/static/styles/custom.css">
</head>
<body class="uk-container" style="padding-top: 42px;">
   <h3>Halo <b><%= user.name %></b>,</h3>

   <div class="uk-flex uk-flex-center">
      <div class="uk-width-1-3@l uk-width-1-1@s">
         <div class="uk-card uk-card-default">
            <div class="uk-card-body">
               <form method="POST" action="/student/start-test">
                  <label>Kode Ujian</label>
                  <input class="uk-input" placeholder="Masukkan Kode Ujian" name="kode_soal">

                  <div class="uk-flex uk-flex-center" style="padding: 12px;">
                     <button type="submit" class="uk-button uk-button-default">Mulai</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>

   <div class="uk-flex uk-flex-center">
      <% listUjian.forEach(function(item, index){ %>
      <div class="uk-width-2-3@l uk-width-1-1@s" style="margin-top: 24px;">
         <div class="uk-card uk-card-default">
            <div class="uk-card-body">
               <div class="uk-grid-divider" uk-grid>
                  <div class="uk-width-2-5@l uk-width-1-2@m uk-width-1-1@s">
                     <h4><%= item.nama_ujian %></h4>
                  </div>
                  <div class="uk-width-1-5@l uk-width-1-6@m uk-width-1-3@s">
                     <h5>Benar</h5>
                     <span style="font-size: 42px;"><b><%= item.benar %></b></span>
                  </div>
                  <div class="uk-width-1-5@l uk-width-1-6@m uk-width-1-3@s">
                     <h5>Salah</h5>
                     <span style="font-size: 42px;"><b><%= item.salah %></b></span>
                  </div>
                  <div class="uk-width-1-5@l uk-width-1-6@m uk-width-1-3@s">
                     <h5>Skor</h5>
                     <% if(item.isKoreksi){ %>
                     <span style="font-size: 42px;"><b><%= item.skor %></b></span>
                     <% } %>
                     <% if(!item.isKoreksi){ %>
                     <span><b>Belum Dikoreksi</b></span>
                     <% } %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <% }); %>
   </div>

   <script src="/static/scripts/uikit.min.js"></script>
</body>
</html>