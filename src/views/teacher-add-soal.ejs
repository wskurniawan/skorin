<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <title>Dashboard Soal</title>

   <link rel="stylesheet" href="/static/styles/uikit.min.css">
   <link rel="stylesheet" href="/static/styles/custom.css">
</head>
<body class="uk-container" style="padding-top: 42px;">
   <ul class="uk-breadcrumb">
      <li><a href="/teacher/dashboard">Home</a></li>
      <li><span><%= idSoal %></span></li>
   </ul>

   <h3><%= infoUjian.title %></h3>
   <div class="uk-grid-divider" uk-grid>
      <div class="uk-width-1-3@l uk-width-1-1@s uk-flex uk-flex-right">
         <h4>Tambah Soal</h4>
      </div>
      <div class="uk-width-2-3@l uk-width-1-1@s">
         <form method="POST" action="/teacher/<%= idSoal %>/add-soal">
            <label>Soal</label>
            <input class="uk-input" placeholder="Masukan pertanyaan" name="soal" style="margin-bottom: 24px;">
            
            <label>Jawaban</label>
            <input class="uk-input" placeholder="Masukkan jawaban" name="jawaban" style="margin-bottom: 24px;">

            <button class="uk-button uk-button-default" type="submit">Tambah</button>
         </form>
      </div>
   </div>

   <div>
      <% listSoal.forEach(function(item, index){ %>
      <div class="uk-flex uk-flex-center" style="margin-top: 24px;">
         <div class="uk-card uk-card-default uk-width-2-3@l uk-width-1-1@s">
            <h4 style="padding: 12px;"><%= index + 1 %>. <%= item.q %></h4>
            <input class="uk-input" disabled value="<%= item.a %>">
         </div>
      </div>
      <% }); %>
   </div>
   
   <div style="margin-bottom: 24px;"></div>
   <script src="/static/scripts/uikit.min.js"></script>
</body>
</html>